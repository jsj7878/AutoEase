<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CarDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/carimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <ImageButton
                    android:id="@+id/lockButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="0"
                    android:background="@drawable/round_circle_button"
                    android:elevation="5dp"
                    android:src="@drawable/ic_lockopen" />

                <ImageButton
                    android:id="@+id/powerButton"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/round_circle_button"
                    android:elevation="5dp"
                    android:src="@drawable/ic_power" />

                <ImageButton
                    android:id="@+id/blueButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="0"
                    android:background="@drawable/round_circle_button"
                    android:elevation="5dp"
                    android:src="@drawable/ic_bluet" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <ImageButton
                    android:id="@+id/emerButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="0"
                    android:background="@drawable/round_circle_button"
                    android:elevation="5dp"
                    android:src="@drawable/ic_emergency" />

                <ImageButton
                    android:id="@+id/heaterButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/round_circle_button"
                    android:elevation="5dp"
                    android:src="@drawable/ic_heat" />

                <ImageButton
                    android:id="@+id/clarkButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="0"
                    android:background="@drawable/round_circle_button"
                    android:elevation="5dp"
                    android:src="@drawable/ic_clarkson" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>